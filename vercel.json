{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "api/openai.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/openai.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "OPENAI_API_KEY": "@OPENAI_API_KEY"
  }
}